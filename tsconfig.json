// tsconfig.json
{
    "compilerOptions": {
      // 1. Basic Setup
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      
      // 2. Runtime Environment (CRITICAL for Cloudflare Workers)
      // 'WebWorker' makes types like Request, Response, and URL available.
      "lib": [
        "ES2020",
        "DOM", 
        "WebWorker" 
      ],
      
      // 3. Type Resolution (CRITICAL for cloudflare:workers and global types like 'Ai')
      "types": [
        "@cloudflare/workers-types",
        "node" // Needed for 'nodejs_compat' flag and related modules
      ]
    },
    "include": [
      "src/**/*" // Include all files in your 'src' directory
    ]
  }